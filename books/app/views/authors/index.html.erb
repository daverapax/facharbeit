<p id="notice"><%= notice %></p>

<h1>Liste der Autoren</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Optionen</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.vorname.titlecase %></td>
        <td><%= author.nachname.titlecase %></td>
        <td>
          <div class="small button-group">
            <%= link_to 'Show', author, :class => 'button' %>
            <%= link_to 'Edit', edit_author_path(author), :class => 'button' %>
            <%= link_to "BÃ¼cher", author_books_path(author.id), :class => 'button' %>
            <%= link_to '<i class="fi-trash icon-red"></i>'.html_safe, author, method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user.admin? %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

