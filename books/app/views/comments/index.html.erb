<p id="notice"><%= notice %></p>

<h1>Kommentare zu <%= @book.title %></h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Book</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.book.title %></td>
        <td><%= comment.user.name %></td>
        <td><%= link_to 'Show', author_book_comment_path(@book.author.id, @book.id, comment.id), :class => 'button' %></td>
        <td><%= link_to 'Edit', edit_author_book_comment_path(@book.author.id, @book.id, comment.id), :class => 'button' %></td>
        <td><%= link_to 'Destroy', author_book_comment_path(@book.author.id, @book.id, comment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_author_book_comment_path %>
